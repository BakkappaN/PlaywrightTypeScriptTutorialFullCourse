pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

    stage('Install Dependencies') {
            steps {
                sh 'npm ci'
                sh 'npx playwright install --with-deps'
            }
        }
        
        stage('Run Playwright Tests') {
            steps {
                sh 'npx playwright test --grep PlaywrightWithJenkins'  // You can specify browsers or configurations
            }
        }
    }
}
